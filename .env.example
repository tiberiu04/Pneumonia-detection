# AI Pneumonia Detection System - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
FLASK_ENV=development
DEBUG=True

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Model Configuration
MODEL_PATH=pneumonia_cnn_model.h5
MODEL_VERSION=1.0

# Database Configuration (if using database)
DATABASE_URL=sqlite:///pneumonia_ai.db
# For PostgreSQL: postgresql://username:password@localhost/pneumonia_ai

# Redis Configuration (if using caching)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FOLDER=static/logs

# API Configuration
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60

# Email Configuration (if using email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# External Services
# AWS S3 Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=pneumonia-ai-bucket
AWS_REGION=us-east-1

# Google Cloud Configuration (if using GCP)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Production Database (Docker Compose)
POSTGRES_PASSWORD=secure_database_password
GRAFANA_PASSWORD=secure_grafana_password

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Performance Tuning
WORKERS=4
TIMEOUT=120
KEEP_ALIVE=2